<div class="container" style="position: relative">
  <div style = "background-color: #EFE; width: 600px; padding: 8px; margin: 16px; border-radius: 4px; box-shadow: 4px 4px 8px rgba(0,0,0,0.2)">
    <h1><%= @flat.name %></h1>
    <p><em><%= @flat.address %></em></p>
  </div>
  <div style = "background-color: #FEF; width: 584px; height: 400px; margin: 16px; padding: 16px; border-radius: 4px; box-shadow: 4px 4px 8px rgba(0,0,0,0.2)">
    <p> <strong><%= @flat.description %></strong></p>
  </div>
  <div style = "background-color: #EFF; width: 196px; text-align: center; position: absolute; top: 0px; right: 60px; padding: 8px; box-shadow: 4px 4px 8px rgba(0,0,0,0.2)">
    <h4>Details</h4>
    <span>👯️: <%= @flat.number_of_guests %></span>
    <span>€: <%= @flat.price_per_night %></span>
  </div>
</div>
